<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Profilo</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="\lista-clienti">Clienti</a></li>
                    <li class="breadcrumb-item active">Profilo</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<form method="post" action="/disabilitaCliente">
<div class="row mb-4">
    <div class="col-xl-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-center">
                    <div class="clearfix"></div>
                    <div>
                        <img class="rounded-circle" alt="200x200" width="200" src="<%= utente.fotoPath%>" data-holder-rendered="true">
                    </div>
                    <h5 class="mt-3 mb-1"><%= utente.nome%></h5>
                    <p class="text-muted"><%= utente.cognome%></p>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success"> <i class="uil uil-file-alt me-1"></i> Disabilita </button>
                    </div>
                </div>

                <hr class="my-4">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="text-muted">
                            <p class="mb-1">Nome :</p>
                            <h5 class="font-size-16"><%= utente.nome%></h5>
                            <p class="mb-1">Cognome :</p>
                            <h5 class="font-size-16"><%= utente.cognome%></h5>
                            <p class="mb-1">E-mail :</p>
                            <h5 class="font-size-16"><%= utente.email%></h5>
                            <input id="email" name="emailHidden" type="email" class="form-control" value="<%= utente.email%>" hidden>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="text-muted text-sm-end">
                            <p class="mb-1">Partner :</p>
                            <h5 class="font-size-16"><%= utente.partner%></h5>
                            <p class="mb-1">P.iva :</p>
                            <h5 class="font-size-16"><%= utente.piva%></h5>
                            <p class="mb-1">Tipo :</p>
                            <% if (utente.tipo==='A') { %>
                            <div class="badge bg-pill bg-soft-primary font-size-12">Admin</div>
                            <%} else {%>
                            <div class="badge bg-pill bg-soft-warning font-size-12">Cliente</div>
                            <%}%>
                        </div>
                    </div>
                </div>
               
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->
</form>
<!-- end form -->

<%- contentFor('FooterJs') %>

<%- contentFor('BottomJs') %>