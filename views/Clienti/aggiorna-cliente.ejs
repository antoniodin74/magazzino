<%- contentFor('HeaderCss') %>

    <!-- select2 css -->
    <link href="public/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

 

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Aggiorna nuovo cliente</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/lista-clienti">Clienti</a></li>
                    <li class="breadcrumb-item active">Aggiorna nuovo cliente</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<form method="post" action="/aggiornaCliente" enctype="multipart/form-data">
<div class="row">
    <div class="col-lg-12">
        <div id="addproduct-accordion" class="custom-accordion">
            <div class="card">
                <a href="#addproduct-billinginfo-collapse" class="text-dark" data-bs-toggle="collapse" aria-expanded="true" aria-controls="addproduct-billinginfo-collapse">
                    <div class="p-4">
                        
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <div class="avatar-xs">
                                    <div class="avatar-title rounded-circle bg-soft-primary text-primary">
                                        01
                                    </div>
                                </div>
                            </div>
                            <div class="flex-1 overflow-hidden">
                                <h5 class="font-size-16 mb-1">Informazioni del Cliente</h5>
                                <p class="text-muted text-truncate mb-0">Compila tutte le informazioni di seguito</p>
                            </div>
                            <i class="mdi mdi-chevron-up accor-down-icon font-size-24"></i>
                        </div>
                        
                    </div>
                </a>

                <div id="addproduct-billinginfo-collapse" class="collapse show" data-bs-parent="#addproduct-accordion">
                    <div class="p-4 border-top">
                        
                           
                            <div class="row">
                                <div class="col-lg-6">
                                    
                                    <div class="mb-3">
                                        <label class="form-label" for="nome">Nome</label>
                                        <input id="nome" name="nome" type="text" class="form-control" value="<%= utente.nome%>" required>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    
                                    <div class="mb-3">
                                        <label class="form-label" for="cognome">Cognome</label>
                                        <input id="cognome" name="cognome" type="text" class="form-control" value="<%= utente.cognome%>" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    
                                    <div class="mb-3">
                                        <label class="form-label" for="piva">Partita iva</label>
                                        <input id="piva" name="piva" type="text" class="form-control" value="<%= utente.piva%>" required>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    
                                    <div class="mb-3">
                                        <label class="form-label" for="email">Email</label>
                                        <input id="email" name="email" type="email" class="form-control" value="<%= utente.email%>" disabled>
                                        <input id="email" name="emailHidden" type="email" class="form-control" value="<%= utente.email%>" hidden>

                                    </div>
                                </div>
                            </div>
                            <div class="mb-0">
                                <label class="form-label" for="note">Note</label>
                                <textarea class="form-control" id="note" name="note" rows="4"><%= utente.note%></textarea>
                            </div>
                       
                    </div>
                </div>
            </div>
            <div class="card">
                <a href="#addproduct-img-collapse" class="text-dark collapsed" data-bs-toggle="collapse" aria-haspopup="true" aria-expanded="false" aria-haspopup="true" aria-controls="addproduct-img-collapse">
                    <div class="p-4">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <div class="avatar-xs">
                                    <div class="avatar-title rounded-circle bg-soft-primary text-primary">
                                        02
                                    </div>
                                </div>
                            </div>
                            <div class="flex-1 overflow-hidden">
                                <h5 class="font-size-16 mb-1">Immagine Utente</h5>
                                <p class="text-muted text-truncate mb-0">Seleziona immagine</p>
                            </div>
                            <i class="mdi mdi-chevron-up accor-down-icon font-size-24"></i>
                        </div>
                        
                    </div>
                </a>
            
                <div id="addproduct-img-collapse" class="collapse" data-bs-parent="#addproduct-accordion">
                    <div class="col-md-6">
                        <img class="rounded mr-2" alt="400x400" width="400" src="<%= utente.fotoPath%>" data-holder-rendered="true">
                    </div>
                </div>
                <div id="addproduct-img-collapse" class="collapse" data-bs-parent="#addproduct-accordion">
                    <div class="p-4 border-top">
                        <div class="fallback">
                            <input name="file" id="file" type="file">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->

<div class="row mb-4">
    <div class="col text-end">
        <button type="submit" class="btn btn-success"> <i class="uil uil-file-alt me-1"></i> Salva </button>
    </div> <!-- end col -->
</div> <!-- end row-->

</form>
<%- contentFor('FooterJs') %>


<!-- select 2 plugin -->
<script src="public/assets/libs/select2/js/select2.min.js"></script>

<!-- init js -->
<script src="public/assets/js/pages/ecommerce-add-product.init.js"></script>

<%- contentFor('BottomJs') %>