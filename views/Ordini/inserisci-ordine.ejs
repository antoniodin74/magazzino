<script>
    // Funzione per recuperare i dati da MongoDB
    async function fetchDataFromMongoDB() {
      // Il tuo codice per recuperare i dati da MongoDB
      // ...
      await fetch(`/lista-clienti-fetch`)
        .then(function(res) {
            return res.json();
        }).then(function(utente){
            console.log(utente);
           
      //var dataList = document.getElementById('modal-body');
      var oddRows = document.querySelectorAll("tr.odd");
      for (var i = 0; i < oddRows.length; i++) {
        oddRows[i].remove();
        }

      let cont = 0;
      utente.forEach(item => {
        cont++;
        var tbody = document.getElementById("modal-body");
        var tr = document.createElement("tr");
        if (cont % 2 === 0) {
            var classe = 'even';
        } else {
            var classe = 'odd';
        }
        tr.classList.add(classe);
        var td = document.createElement("td");
        var classeTd = 'sorting_1';
        td.classList.add(classeTd);
        var span = document.createElement("span");
        span.textContent = item.nome;
        td.appendChild(span);
        tr.appendChild(td);
        tbody.appendChild(tr);

        var td = document.createElement("td");
        var span = document.createElement("span");
        span.textContent = item.cognome;
        td.appendChild(span);
        tr.appendChild(td);

        var td = document.createElement("td");
        var span = document.createElement("span");
        span.textContent = item.piva;
        td.appendChild(span);
        tr.appendChild(td);

        var td = document.createElement("td");
        var span = document.createElement("span");
        span.textContent = item.email;
        td.appendChild(span);
        tr.appendChild(td);
        });
        
        $('.datatable').DataTable();
        $(".dataTables_length select").addClass('form-select form-select-sm');
        })
        .catch(error => {
            console.log(error);
        });
    }
  </script>
